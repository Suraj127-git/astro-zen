---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<section id={href} class="py-24">
  <div class="max-w-7xl px-4 sm:px-6 md:px-8 lg:px-12 mx-auto w-full">
    <h2
      class="text-4xl md:text-5xl font-serif font-bold tracking-tighter text-text mb-14"
    >
      {text}
    </h2>
    <slot />
  </div>
</section>
